{
    "name" : "__MSG_ExtensionName__" ,
    "short_name" : "__MSG_ExtensionShortName__" ,

    "description" : "__MSG_ExtensionDescription__" ,
    "manifest_version" : 2 ,
    "version" : "4.3" ,

    "default_locale" : "zh_CN" ,
    "homepage_url" : "https://chrome.google.com/webstore/support/ikhdkkncnoglghljlkmcimlnlhkeamad" ,
    "icons" : {
        "128" : "/img/logo.png" ,
        "16" : "/img/logo.png" ,
        "48" : "/img/logo.png"
    } ,

    "author" : "Milk Lee( milk.lee@qq.com )" ,

    "content_security_policy" : "script-src 'self' https://ssl.google-analytics.com; object-src 'self'" ,
    "permissions" : [
        "*://*/*", "contextMenus", "storage", "cookies", "unlimitedStorage", "clipboardWrite", "clipboardRead",
        "idle", "notifications"
    ] ,

    "background" : {
        "page" : "lmk123.html" ,
        "persistent" : false
    } ,

    "options_page" : "options.html" ,

    "browser_action" : {
        "default_icon" : {
            "19" : "/img/logo.png" ,
            "38" : "/img/logo.png"
        } ,
        "default_popup" : "/popup.html" ,
        "default_title" : "Ctrl + Q"
    } ,

    "commands" : {
        "_execute_browser_action" : {
            "suggested_key" : {
                "default" : "Ctrl+Q" ,
                "mac" : "Command+Q"
            }
        } ,
        "toggle-selection" : {
            "suggested_key" : {
                "default" : "Alt+Z"
            } ,
            "description" : "切换网页划词翻译开关"
        }
    } ,

    "content_scripts" : [
        {
            "matches" : ["http://*/*", "https://*/*", "file:///*"] ,
            "css" : ["/css/content.css"] ,
            "js" : ["/js/com.js", "/js/content.js"] ,
            "all_frames" : true ,
            "run_at" : "document_end"
        }
    ] ,

    "web_accessible_resources" : ["/js/ydw.js"]
}
