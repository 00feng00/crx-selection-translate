{
    "name": "右键翻译",
    "version": "3.2",
    "manifest_version": 2,
    "description": "整合了百度与有道的在线翻译服务，支持中、日、英等语言的互译及右键与划词翻译，同时增加了有道的网页翻译功能。",
    "permissions": ["<all_urls>", "contextMenus", "storage", "unlimitedStorage", "clipboardWrite", "clipboardRead"],
    "background": {
        "page": "html/lmk123.html",
        "persistent": false
    },
    "update_url": "http://lmk123nodejs.duapp.com/static/extension/translate/update.xml",
    "homepage_url": " http://blog.lmk123.com/?p=30",
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Q"
            }
        }
    },
    "web_accessible_resources": [
        "js/web.js"
    ],
    "browser_action": {
        "default_icon": {
            "19": "img/logo.png",
            "38": "img/logo.png"
        },
        "default_title": "按下Ctrl+Q试试 :)",
        "default_popup": "html/popup.html"
    },
    "icons": {
        "16": "img/ico16.png",
        "48": "img/logo.png",
        "128": "img/logo.png"
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "file:///*"],
            "js": ["js/common.js", "js/content.js"],
            "all_frames": true,
            "css": ["css/content.css"]
        }
    ]
}